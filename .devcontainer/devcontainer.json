{
  "name": "mlops-devpod",
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile"
  },
 
  "runArgs": [
    "--gpus",
    "all",
    "--network=host"
  ],
  
  "remoteUser": "vscode",
  "postCreateCommand": "mkdir -p ~/.ssh && ssh-keyscan github.com >> ~/.ssh/known_hosts",
  "postCreateCommand": "scripts/setup && scripts/install_torch.sh"
}
